pipeline {
   agent any
    stages {
        stage('build image') {
            steps {
                script{
                      sh "sudo docker build -t nginx-image ."
                }
            }
        }
        stage('run docker container') {
            steps {
                script{
                    sh "sudo docker run -d -p 80:80 nginx-image"
                    }
                }
            }
        }
    post
    {
        always
        {
            sh "docker rmi nginx-image | true"
        }
    }
}

